<header class="relative" ...attributes>
  <Toucan::Link
    @href="#main"
    @variant="primary"
    class="-top-full absolute left-2 z-skip-to-content focus:top-2 print:hidden"
  >
    Skip to main
  </Toucan::Link>


  {{!-- template-lint-disable no-inline-styles --}}
  <div class="bg-surface-md shadow-md" style="height: 80px">
    <div class="max-w-screen-2xl flex items-center justify-between mx-auto px-20 h-full">
      <div class="flex items-center gap-2 h-full">
        <ExternalLink @href="https://crowdstrike.com" class="mt-3">
          <img src="/logo_crowdstrike.png" alt="Visit crowdstrike.com" />
        </ExternalLink>

        <span>|</span>

        <span class="uppercase type-xl" style="font-weight: bold;">
          open source
        </span>
      </div>


      <nav class="flex gap-2">
        <Toucan::Link @variant="quiet" class=""@href="/projects">
          <span class="type-lg-medium">Projects</span>
        </Toucan::Link>

        <Toucan::Link @variant="quiet" @href="/documentation">
          <span class="type-lg-medium">Documentation</span>
        </Toucan::Link>

        <Toucan::Link @variant="quiet" @href="/policies">
          <span class="type-lg-medium">Policies</span>
        </Toucan::Link>
      </nav>
    </div>
  </div>

  <div data-test-selector="skip-to-target" id="skip-to-target" tabindex="-1" ></div>
</header>
